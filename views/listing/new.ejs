<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <form action="/listings" method="post"  novalidate class="needs-validation" enctype="multipart/form-data">
      <h3>Create a New Listing</h3>
      <div class="form-group">
        <label for="title" class="form-label">Title:</label>
        <input
          type="text"
          id="title"
          name="listing[title]"
          placeholder="Enter title"
          class="form-control"
          required
        />
        <div class="valid-feedback"> Title looks good!</div>
        <div class="invalid-feedback">Please enter title</div>
      </div>
      <br />

      <div class="form-group">
        <label for="description" class="form-label">Description:</label>
        <textarea
          id="description"
          name="listing[description]"
          placeholder="Enter description"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>
      <br />

      <!-- <div class="form-group">
        <label for="image" class="form-label">Image URL:</label>
        <input
          type="text"
          id="image"
          name="listing[image]"
          placeholder="Enter image URL"
          class="form-control"
         
        />
      </div> -->
      <br>
      <div class="form-group">
        <label for="image" class="form-label"> uplode Image</label>
        <input
          type="file"
          id="image"
          name="listing[image]"
          class="form-control"
         required
        />
      </div>
      <br />

      <div class="form-group">
        <label for="price" class="form-label">Price:</label>
        <input
        type="number"
          id="price"
          name="listing[price]"
          placeholder="Enter price"
          class="form-control "
          required
        />
        <div class="invalid-feedback">Please enter price</div>
      </div>

      <br />
      <div class="form-group">
        <label for="location" class="form-label">Location:</label>
        <input
          type="text"
          id="location"
          name="listing[location]"
          placeholder="Enter location"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter location</div>
      </div>
      <br />

      <div class="form-group">
        <label for="country" class="form-label">Country:</label>
        <input
          type="text"
          id="country"
          name="listing[country]"
          placeholder="Enter country"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter country name</div>
      </div>
      <br />

      <button type="submit" class="btn btn-dark">Add </button>
    </form>
  </div>
</div>
<script src="/js/script.js"></script>
